<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:cardview="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/image_view_height"
                                    android:layout_margin="2dp"
                                    android:id="@+id/articlecard"
                                    android:background="@drawable/preference_list_divider_material"
                                    cardview:cardBackgroundColor="@color/cardview_light_background"
                                    cardview:cardCornerRadius="0dp"
                                    cardview:cardElevation="3dp"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/articleimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"/>
                <!--android:src="@drawable/ic_menu_gallery" />-->

        <TextView
                android:id="@+id/articletitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="false"
                android:layout_toEndOf="@+id/articleimage"
                android:maxLines="4"
                android:padding="8dp"
                android:text="dafdafda"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                />
        <TextView
                android:id="@+id/articlesubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/articletitle"
                android:layout_toEndOf="@+id/articleimage"
                android:maxLines="6"
                android:padding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="dafdafda"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
                />

        <ImageView
                android:id="@+id/is_starred"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_star_border_black_24dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>